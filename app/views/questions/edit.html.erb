<h1>edit question</h1>


<%= @question.errors.full_messages.join(", ") %>
<%# if @question is persisted then the `form_for` helper  %>
<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <%= f.submit %>
<% end %>
